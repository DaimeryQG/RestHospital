# Nombre de la aplicación
spring.application.name=Hospital

# Configuración del servidor
server.port=8081  # Cambia el puerto si quieres otro que no sea el predeterminado (8080)

# Configuración de la base de datos
spring.datasource.url=jdbc:mysql://localhost:3306/imss  # Cambia 'imss' por el nombre real de tu base de datos
spring.datasource.username=root                          # Cambia 'root' si usas otro usuario
spring.datasource.password=Da1mery                       # Cambia 'Da1mery' por tu contraseña real

# Configuración de JPA
spring.jpa.hibernate.ddl-auto=update      # Usa 'create', 'update', 'validate', o 'none' según tu necesidad
spring.jpa.show-sql=true                  # Muestra las consultas SQL en la consola
spring.jpa.properties.hibernate.format_sql=true  # Opcional: para formatear las consultas SQL en consola
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.MySQLDialect  # Asegura la compatibilidad con MySQL

# Configuración del registro de logs (opcional)
logging.level.org.springframework.web=DEBUG  # Muestra detalles adicionales para depuración
logging.level.com.imss.hospital=DEBUG        # Ajusta el nivel de logs de tus clases (ajusta el paquete según tu estructura)
